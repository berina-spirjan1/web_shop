<button
        type="button"
        class="btn btn-sm btn-default float-left"
        data-toggle="modal"
        data-target="#exampleModalCenter">
    Podrška</button>
<div class="container">
    <!-- Modal -->
    <div
            class="modal fade"
            id="exampleModalCenter"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalCenterTitle"
            aria-hidden="true"
    >
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">
                        Podrška: Chat sa administratorom
                    </h5>
                    <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                    >
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="chat-container">
                        <%= console.info("OVO JE ROLA2",role)%>
                        <% if (role !=='Admin') {%>
                        <%= console.info("OVO JE ROLA",role)%>
                            <small>Pošaljite poruku i pričekajte Administratora</small>
                        <%} else {%>
                            <small>Sačekajte poruku korisnika</small>
                        <%}%>
                    </div>

                    <form id="form">
                        <div class="form-group p-0 m-0">
                  <textarea
                          class="form-control"
                          id="exampleFormControlTextarea1"
                          rows="3"></textarea>
                        </div>
                        <button
                                type="submit"
                                class="btn btn-sm float-right btn-default mb-2 dugme"
                                style="background-color: rosybrown">
                            Pošalji
                        </button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button
                            type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div></div>
</body>
<script>
    var socket = io();
    let form = document.getElementById('form');
    let chatContainer = document.getElementById('chat-container');
    let input = document.getElementById('exampleFormControlTextarea1');

    const role = '<%= role %>'
    console.log("OVO JE POKUPLJENO ISPOD",role);

    form.addEventListener('submit', function (e) {
        console.log('slanje poruke');
        const date = new Date();
        e.preventDefault();
        if (input.value) {
            socket.emit('chat message', { msg: input.value, role });
            const chatMessage = document.createElement('p');
            chatMessage.classList.add('message-item');
            chatMessage.innerHTML = `${date.getHours()}:${date.getMinutes()} <b>Vi:</b>  ${
                input.value
            }`;
            chatContainer.appendChild(chatMessage);
            input.value = '';
        }
    });

    socket.on('chat message', function (msg) {
        console.log('prosao');
        const date = new Date();
        if (role === 'Admin') {
            const chatMessage = document.createElement('p');
            chatMessage.classList.add('message-item');
            chatMessage.innerHTML = `${date.getHours()}:${date.getMinutes()} <b>Korisnik:</b>  ${msg}`;
            chatContainer.appendChild(chatMessage);
        }
    });
    socket.on('chat message admin', function (msg) {
        console.log('prosao2');
        const date = new Date();
        const chatMessage = document.createElement('p');
        chatMessage.classList.add('message-item');
        chatMessage.innerHTML = `${date.getHours()}:${date.getMinutes()} <b>Administrator:</b>  ${msg}`;
        chatContainer.appendChild(chatMessage);
    });

